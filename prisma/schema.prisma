// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Game {
  id            String    @unique @default(cuid())
  name          String
  height        Int
  width         Int
  tiles         Tile[]
  factions      Faction[]
  amountOfMoves Int
  createdAt     DateTime  @default(now())

  @@id([name, id])
}

model Tile {
  id           Int
  gameId       String
  gameName     String
  game         Game         @relation(fields: [gameName, gameId], references: [name, id], onDelete: Cascade)
  resourceType RESOURCETYPE
  factionId    Int          @default(-1)
  unit         String?
  bombed       Boolean      @default(false)
  fortified    Boolean      @default(false)

  @@id([id, gameId])
}

model Unit {
  id        String   @id @default(cuid())
  type      UNITTYPE
  health    Int
  index     Int
  factionId Int
  gameId    String
  faction   Faction  @relation(fields: [factionId, gameId], references: [id, gameId], onDelete: Cascade)
}

model Faction {
  id            Int
  gameId        String
  gameName      String
  game          Game    @relation(fields: [gameName, gameId], references: [name, id], onDelete: Cascade)
  gold          Int     @default(1000)
  baseIndex     Int
  score         Int     @default(0)
  land          Int     @default(3)
  destroyed     Boolean @default(false)
  units         Unit[]
  population    Int     @default(2)
  kills         Int     @default(0)
  currentUpkeep Int     @default(0)

  @@id([id, gameId])
}

model currentGame {
  id       Int    @id @default(1)
  gameId   String
  gameName String
}

model gameStats {
  id          String @id
  name        String
  winner      Int
  second      Int
  third       Int
  winnerScore Int
  secondScore Int
  thirdScore  Int
}

enum RESOURCETYPE {
  BASE
  RESOURCE
  EMPTY
}

enum UNITTYPE {
  WORKER
  PIONEER
  WARRIOR
  HEALER
  MINER
}
